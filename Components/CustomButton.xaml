<UserControl x:Class="Logistics_Software.Components.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             mc:Ignorable="d">
             
             <!--xmlns:local="clr-namespace:Logistics_Software.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">-->

    <Button Content="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Background="{DynamicResource PrimaryHueMidBrush}"
            Foreground="White"
            Padding="10,5"
            FontSize="16"
            Cursor="Hand"
            Style="{StaticResource MaterialDesignRaisedButton}"/>
    
</UserControl>
