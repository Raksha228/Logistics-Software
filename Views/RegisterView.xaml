<UserControl x:Class="Logistics_Software.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Background="#F5F5F5" Margin="20">
        <Border Background="White" Padding="30" CornerRadius="10"
                materialDesign:ShadowAssist.ShadowDepth="Depth2" VerticalAlignment="Center">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Регистрация"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#2E5A88"
                               Margin="0 0 0 20"
                               HorizontalAlignment="Center"/>

                    <TextBox 
                        Hint="Логин"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                        Margin="0 10"/>

                    <PasswordBox 
                        x:Name="PasswordBox"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}" 
                        materialDesign:HintAssist.Hint="Пароль"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        Margin="0 10"/>

                    <PasswordBox 
                        x:Name="ConfirmPasswordBox"
                        Style="{StaticResource MaterialDesignOutlinedPasswordBox}" 
                        materialDesign:HintAssist.Hint="Подтвердите пароль"
                        PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                        Margin="0 10"/>

                    <ComboBox 
                        ItemsSource="{Binding Roles}" 
                        SelectedItem="{Binding SelectedRole}" 
                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:HintAssist.Hint="Роль"
                        Margin="0 10"/>

                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#FF4444" 
                               FontSize="12" 
                               Margin="0 5"
                               Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <Button Content="Зарегистрироваться"
                            Command="{Binding RegisterCommand}" 
                            Background="#2E5A88"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0 20 0 10"
                            Padding="10"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>

                    <TextBlock Text="Уже есть аккаунт?"
                               HorizontalAlignment="Center"
                               FontSize="12" 
                               Foreground="#333333"/>
                    <Button Content="Назад к входу"
                            Command="{Binding NavigateLoginCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="#2E5A88"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
