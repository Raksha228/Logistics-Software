<UserControl x:Class="Logistics_Software.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Logistics_Software.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:OrdersViewModel/>
    </UserControl.DataContext>

    <Grid Background="#FFFFFF">
        <StackPanel Margin="20">
            <TextBlock Text="Список заказов" FontSize="20" FontWeight="Bold"/>

            <ListBox ItemsSource="{Binding Orders}" Height="300" Margin="0,10"/>

            <Button Content="Обновить" Command="{Binding RefreshOrdersCommand}" Background="#4CAF50" Foreground="White" Height="40"/>
        </StackPanel>
    </Grid>
</UserControl>
