<UserControl x:Class="Logistics_Software.Views.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Logistics_Software.Views"
             xmlns:viewModels="clr-namespace:Logistics_Software.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="1024" d:DesignHeight="768"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.DataContext>
        <viewModels:NavigationViewModel />
    </UserControl.DataContext>

    <DockPanel>
        <!-- Левое боковое меню -->
        <StackPanel Background="#2E5A88"
                    Width="200"
                    DockPanel.Dock="Left"
                    VerticalAlignment="Stretch">

            <!-- Логотип/Название -->
            <TextBlock Text="LogiSoft"
                       FontSize="22"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="16"
                       HorizontalAlignment="Center"/>

            <!-- Навигационные кнопки -->
            <ListBox ItemsSource="{Binding NavigationItems}"
                     SelectedItem="{Binding SelectedNavigationItem}"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="White"
                     Padding="8"
                     FontSize="14">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="4">
                            <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Margin="8,0"/>
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Separator Margin="8" />

            <!-- Кнопка выхода -->
            <Button Content="Выход"
                    Command="{Binding LogoutCommand}"
                    Margin="8"
                    Padding="10"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
        </StackPanel>

        <!-- Контентная область -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</UserControl>
